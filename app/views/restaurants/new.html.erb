<div class="container">
  <h1>Add a new restaurant</h1>

  <%= simple_form_for(@restaurant) do |f| %>
    <%= f.input :name, placeholder: :name %>
    <%= f.input :address, placeholder: :address %>
    <%= f.input :phone_number, placeholder: :phone_number %>
    <%= f.input :category, collection: Restaurant::CATEGORY %>

    <%= f.submit %>
  <% end %>

  <p></p>
  <%= link_to 'Back to all restaurants', restaurants_path %>
</div>
